<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.worldtechpoints.bcsknowledge">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bcs_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bcs_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".mcqTest.QuizShowActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".SubmitCategoryActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".mcqTest.QuizSubmitActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".SubmitCategoryActivity" />
        <activity
            android:name=".home.JobSubmitActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".SubmitCategoryActivity" />


        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />


        <activity
            android:name=".home.JobDetailShowActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Question.SubmitQuestionActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".SubmitCategoryActivity" />
        <activity
            android:name=".Question.ShowQuestionActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".OpeningScreen.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>